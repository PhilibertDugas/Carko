project 'Carko.xcodeproj'

use_frameworks!
inhibit_all_warnings!

platform :ios, '10.0'

def shared_pods
  pod 'Firebase', '>= 2.5.1'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  pod 'Firebase/Performance'
  pod 'FirebaseUI/Storage', '>= 2.0.1'
  pod 'FirebaseUI/Auth'
  pod 'FirebaseUI/Facebook'
  pod 'Stripe'
  pod 'Alamofire'
  pod 'IQKeyboardManagerSwift'
  pod 'NohanaImagePicker'
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'GoogleMaps'
end

target 'Carko' do
  pod 'Firebase/Crash'
  shared_pods
end

target 'CarkoProduction' do
  shared_pods
end

target 'CarkoTests' do
    pod 'OHHTTPStubs' # Default subspecs, including support for NSURLSession & JSON etc
    pod 'OHHTTPStubs/Swift' # Adds the Swiftier API wrapper too
    shared_pods
end

target 'CarkoUITests' do
    shared_pods
end
