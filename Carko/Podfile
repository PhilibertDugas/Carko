project 'Carko.xcodeproj'

use_frameworks!
inhibit_all_warnings!

platform :ios, '10.0'

abstract_target 'default' do
  pod 'Firebase'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  pod 'Firebase/Crash'
  pod 'FirebaseUI/Storage', '~> 1.0'
  pod 'Stripe'
  pod 'Alamofire'
  pod 'IQKeyboardManagerSwift'
  pod 'NohanaImagePicker'

  # We need to remove this
  pod 'SCLAlertView'

  target 'Carko'
  target 'Carko - Production'

  target 'CarkoTests' do
    pod 'Firebase'
    pod 'Firebase/Auth'
    pod 'Stripe'
    pod 'Alamofire'

    pod 'OHHTTPStubs' # Default subspecs, including support for NSURLSession & JSON etc
    pod 'OHHTTPStubs/Swift' # Adds the Swiftier API wrapper too
  end

  target 'CarkoUITests' do
    inherit! :search_paths
  end
end
